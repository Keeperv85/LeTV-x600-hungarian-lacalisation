<?xml version="1.0" encoding="utf-8"?>
<transitionSet android:duration="500" android:transitionOrdering="together"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <changeBounds />
    <slide android:slideEdge="left" android:transitionVisibilityMode="mode_in">
        <targets>
            <target android:targetId="@id/popup_back_icon" />
        </targets>
    </slide>
    <slide android:slideEdge="bottom" android:transitionVisibilityMode="mode_in">
        <targets>
            <target android:targetId="@id/popup_title" />
        </targets>
    </slide>
</transitionSet>