<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="bottom" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="@dimen/extra_large_margin" android:layout_width="fill_parent" android:layout_height="@dimen/default_row_height">
            <TextView android:id="@id/progress_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/compressing" />
        </LinearLayout>
        <com.letv.android.filemanager.ui.widgets.NumberProgressBar android:id="@id/progress_bar" style="@style/NumberProgressBar_Default" />
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:padding="@dimen/extra_large_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/progress_context" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="2" />
        </LinearLayout>
        <TextView android:background="@color/default_black" android:layout_width="fill_parent" android:layout_height="1.0dip" />
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="@dimen/default_row_height">
            <Button android:id="@id/progress_concel_btn" android:background="@color/action_bg" android:layout_width="fill_parent" android:layout_height="0.0dip" android:text="@string/cancel" android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>