<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PreferenceHeaderPanelSinglePane">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginStart">0.0dip</item>
        <item name="android:layout_marginEnd">0.0dip</item>
    </style>
    <style name="PreferencePanelSinglePane" parent="@android:style/PreferencePanel">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingStart">0.0dip</item>
        <item name="android:paddingEnd">0.0dip</item>
        <item name="android:layout_marginStart">0.0dip</item>
        <item name="android:layout_marginEnd">0.0dip</item>
    </style>
    <style name="PreferenceHeaderListSinglePane" parent="@android:style/PreferenceHeaderList">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:paddingStart">0.0dip</item>
        <item name="android:paddingEnd">0.0dip</item>
        <item name="android:layout_marginStart">0.0dip</item>
        <item name="android:layout_marginEnd">0.0dip</item>
    </style>
    <style name="PreferenceFragmentListSinglePane" parent="@android:style/PreferenceFragmentList">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingStart">0.0dip</item>
        <item name="android:paddingEnd">0.0dip</item>
        <item name="android:layout_marginStart">0.0dip</item>
        <item name="android:layout_marginEnd">0.0dip</item>
    </style>
    <style name="PreferenceFragmentStyle" parent="@android:style/PreferenceFragment">
        <item name="android:layout">@layout/preference_list_fragment</item>
    </style>
    <style name="SettingMenuTextStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/leui_reback_color</item>
    </style>
    <style name="Theme.SettingsBase" parent="@android:style/Theme.Leui">
        <item name="android:checkboxStyle">@android:style/Widget.DeviceDefault.CompoundButton.CheckBox</item>
        <item name="android:seekBarStyle">@android:style/Widget.Material.Light.SeekBar</item>
        <item name="android:colorAccent">@color/leui_blue</item>
        <item name="android:leStatusBarIconColor">@android:color/black</item>
    </style>
    <style name="Theme.Settings" parent="@style/Theme.SettingsBase">
        <item name="android:actionBarStyle">@style/LeUISettingsBackActionBarStyle</item>
        <item name="android:actionModeCloseDrawable">@android:drawable/le_btn_edit_text_clear</item>
        <item name="android:actionMenuTextAppearance">@style/SettingMenuTextStyle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:preferencePanelStyle">@style/PreferencePanelSinglePane</item>
        <item name="android:preferenceHeaderPanelStyle">@style/PreferenceHeaderPanelSinglePane</item>
        <item name="android:statusBarColor">@color/leui_status_bar_background</item>
        <item name="android:preferenceListStyle">@style/PreferenceHeaderListSinglePane</item>
        <item name="android:preferenceFragmentListStyle">@style/PreferenceFragmentListSinglePane</item>
    </style>
    <style name="Theme.LeUIMainSettings" parent="@style/Theme.Settings">
        <item name="android:actionBarStyle">@style/LeUISettingsActionBarStyle</item>
    </style>
    <style name="Theme.LeUIBackActionBar" parent="@style/Theme.Settings">
        <item name="android:actionBarStyle">@style/LeUISettingsBackActionBarStyle</item>
    </style>
    <style name="LeUISettingsActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/leui_action_bar_divider</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="LeUISettingsBackActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/leui_status_bar_background</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:homeAsUpIndicator">@android:drawable/le_top_btn_icon_reback</item>
    </style>
</resources>
