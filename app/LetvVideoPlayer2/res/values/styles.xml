<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Leui">
        <item name="android:actionBarStyle">@style/actionbar_style</item>
        <item name="android:actionModeBackground">@color/mng_title_bg</item>
        <item name="android:actionModeCloseDrawable">@drawable/le_actionbar_menuitem_white_cancel</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionModeStyle">@style/LetvVideoPlayerActionModeTheme</item>
        <item name="android:statusBarColor">@color/mng_title_bg</item>
    </style>
    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:seekBarStyle">@style/le_style_media_seekbar</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:actionModeStyle">@style/actionModeStyle</item>
        <item name="android:fontFamily">@string/title_font_family</item>
    </style>
    <style name="actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/mng_title_bg</item>
        <item name="android:displayOptions">none</item>
        <item name="android:titleTextStyle">@style/LetvVideoPlayerActionBarTitleText</item>
    </style>
    <style name="LetvVideoPlayerActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="LetvVideoPlayerActionModeTheme" parent="@android:style/Widget.Holo.Light.ActionMode">
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextStyle">@style/LetvVideoPlayerActionModeTitleText</item>
        <item name="android:subtitleTextStyle">@style/LetvVideoPlayerActionModeSubtitleText</item>
    </style>
    <style name="LetvVideoPlayerActionModeSubtitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Subtitle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="LetvVideoPlayerActionModeTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="le_style_media_seekbar" parent="@android:style/Widget.Material">
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">37.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_seekbar</item>
        <item name="android:minHeight">37.0dip</item>
        <item name="android:thumb">@drawable/ic_seekbar_big</item>
        <item name="android:thumbOffset">0.0dip</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="android:splitTrack">true</item>
    </style>
    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="player_seekbar">
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">37.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">37.0dip</item>
        <item name="android:thumb">@drawable/ic_seekbar_big</item>
        <item name="android:thumbOffset">0.0dip</item>
    </style>
    <style name="MenuPopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/right_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>
    <style name="FullScreen" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="le_style_media_progressbar" parent="@android:style/Widget.Material">
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
        <item name="android:minHeight">5.0dip</item>
        <item name="android:mirrorForRtl">true</item>
        <item name="android:splitTrack">true</item>
    </style>
    <style name="actionModeStyle" parent="@android:style/Widget.Material.ActionMode">
        <item name="android:background">@color/mng_title_bg</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>
    <style name="ActionBarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
