<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Material.Settings.Floating" parent="@android:style/Theme.Leui.Dialog.Alert">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <style name="file_transfer_item_label">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <item name="android:textColor">@android:color/secondary_text_default_material_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginStart">16.0dip</item>
        <item name="android:layout_marginEnd">16.0dip</item>
    </style>
    <style name="file_transfer_item_content">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
        <item name="android:textColor">@android:color/primary_text_default_material_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginStart">16.0dip</item>
        <item name="android:layout_marginEnd">16.0dip</item>
    </style>
    <style name="Theme_Bt_Opp" parent="@android:style/Theme.Leui">
        <item name="android:actionBarStyle">@style/Theme_Bt_Opp_ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/le_top_btn_icon_reback</item>
        <item name="android:statusBarColor">@color/bt_color_actionbar</item>
        <item name="android:leStatusBarIconColor">@color/bt_color_statusbar_icon</item>
    </style>
    <style name="Theme_Bt_Opp_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bt_color_actionbar</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>
</resources>
