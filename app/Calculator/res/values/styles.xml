<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorTheme" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimary">@color/calculator_accent_color</item>
        <item name="android:statusBarColor">@color/calculator_accent_color</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
    <style name="DisplayEditTextStyle" parent="@android:style/Widget.Material.Light.EditText">
        <item name="android:gravity">end|bottom|center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="button_style">
        <item name="android:background">@drawable/btn_digit_land_ground</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Calculator_theme" parent="@android:style/Theme.Material">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/main_background</item>
    </style>
    <style name="button_text_style">
        <item name="android:textSize">40.0dip</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="advanced_button_text_style">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="button_ground_land_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_digit_land_ground</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
    </style>
    <style name="advanced_button_ground_land_style">
        <item name="android:background">@drawable/btn_digit_port_ground</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="button_ground_port_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_digit_port_ground</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
    </style>
    <style name="advanced_button_ground_port_style">
        <item name="android:background">@drawable/btn_digit_port_ground</item>
        <item name="android:padding">9.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="button_ground_gray_style" parent="@style/button_text_style">
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/btn_digit_ground_num</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="advanced_button_ground_gray_style" parent="@style/advanced_button_text_style">
        <item name="android:textSize">32.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/btn_digit_ground_num</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="digit_button_style" parent="@style/button_style">
        <item name="android:background">@drawable/btn_digit_ground</item>
    </style>
    <style name="button_small_style" parent="@style/button_style">
        <item name="android:textSize">32.0dip</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">9.0dip</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="advance_button_style">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/andvanced_button_text</item>
        <item name="android:background">@drawable/btn_advanced_comment_ground</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="button_advanced_small_style" parent="@style/advance_button_style" />
    <style name="port_display_style">
        <item name="android:textSize">56.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff21a8db</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingRight">30.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="port_display_result_style">
        <item name="android:textSize">56.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff525e66</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingRight">30.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="land_display_result_style">
        <item name="android:textSize">36.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff525e66</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingRight">19.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="land_display_style">
        <item name="android:textSize">36.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff21a8db</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingRight">19.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
