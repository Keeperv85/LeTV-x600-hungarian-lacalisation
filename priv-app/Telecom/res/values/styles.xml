<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialpadSpaceStyle">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">3.0</item>
    </style>
    <style name="DialpadLineStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_marginLeft">@dimen/leui_dialpad_view_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/leui_dialpad_view_margin_left_right</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="DialpadKeyNumberStyle">
        <item name="android:textSize">@dimen/dialpad_key_numbers_size</item>
        <item name="android:textColor">@color/leui_dialpad_primary_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dialpad_key_number_margin_bottom</item>
        <item name="android:fontFamily">helve-neue-thin</item>
    </style>
    <style name="EmergencyNumberStyle">
        <item name="android:textSize">81.0px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">helve-neue-thin</item>
    </style>
    <style name="DialpadBottomKeyNumberStyle" parent="@style/DialpadKeyNumberStyle">
        <item name="android:layout_marginBottom">@dimen/dialpad_zero_key_number_margin_bottom</item>
    </style>
    <style name="DialpadKeyStarStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dialpad_symbol_margin_bottom</item>
    </style>
    <style name="DialpadKeyPoundStyle">
        <item name="android:textSize">@dimen/dialpad_key_numbers_size</item>
        <item name="android:textColor">@color/leui_dialpad_primary_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dialpad_symbol_margin_bottom</item>
        <item name="android:fontFamily">helve-neue-light</item>
    </style>
    <style name="DialpadKeyLettersStyle">
        <item name="android:textSize">@dimen/dialpad_key_letters_size</item>
        <item name="android:textColor">@color/leui_dialpad_secondary_text_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">helve-neue-light</item>
    </style>
    <style name="DialpadKeyButtonStyle">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/leui_dialpad_button_width</item>
        <item name="android:layout_height">@dimen/leui_dialpad_button_height</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="EmergencyKeyButtonStyle">
        <item name="android:background">@drawable/btn_dialpad_key</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/leui_emergency_button_width</item>
        <item name="android:layout_height">@dimen/leui_emergency_button_height</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="DialpadBottomKeyButtonStyle" parent="@style/DialpadKeyButtonStyle">
        <item name="android:layout_height">@dimen/dialpad_bottom_key_height</item>
    </style>
    <style name="DialpadKeyInternalLayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/btn_dialpad_key</item>
        <item name="android:layout_width">@dimen/leui_dialpad_number_height</item>
        <item name="android:layout_height">@dimen/leui_dialpad_number_height</item>
    </style>
    <style name="EmergencyKeyInternalLayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/leui_emergency_button_width</item>
        <item name="android:layout_height">@dimen/leui_emergency_button_height</item>
    </style>
    <style name="Theme.Telecomm.QuickResponseLight" parent="@android:style/Theme.Material.Light">
        <item name="android:windowBackground">@color/quick_response_settings_background_color</item>
        <item name="android:actionBarStyle">@style/TelephonyActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/DialtactsActionBarOverflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>
    <style name="TelephonyActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/actionbar_background_color</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/DialtactsActionBarTitleText</item>
    </style>
    <style name="DialtactsActionBarTitleText" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/quick_response_settings_actionbar_text_color</item>
    </style>
    <style name="DialtactsActionBarOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow_menu</item>
    </style>
    <style name="CallAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:taskOpenEnterAnimation">@anim/leui_incallui_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/leui_incallui_open_exit</item>
        <item name="android:taskCloseEnterAnimation">@anim/leui_incallui_close_enter</item>
        <item name="android:taskCloseExitAnimation">@anim/leui_incallui_close_exit</item>
        <item name="android:taskToFrontEnterAnimation">@anim/leui_incallui_open_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/leui_incallui_open_exit</item>
        <item name="android:taskToBackEnterAnimation">@anim/leui_incallui_close_enter</item>
        <item name="android:taskToBackExitAnimation">@anim/leui_incallui_close_exit</item>
    </style>
    <style name="Theme.Telecomm.Transparent" parent="@android:style/Theme.Material.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/CallAnimationStyle</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="LeUICallSettingHoloTheme" parent="@android:style/Theme.Leui">
        <item name="android:actionBarStyle">@style/RespondSettingsActionBar</item>
    </style>
    <style name="RespondSettingsActionBar" parent="@style/EmptyActionBar">
        <item name="android:background">@drawable/leui_action_bar_divider</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:homeAsUpIndicator">@android:drawable/le_top_btn_icon_reback</item>
    </style>
    <style name="EmptyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/conversation_top_bar_background</item>
        <item name="android:displayOptions">none</item>
    </style>
</resources>
